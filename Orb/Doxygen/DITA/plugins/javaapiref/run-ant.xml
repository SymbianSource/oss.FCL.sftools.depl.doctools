<project name="javaapiref" default="all" basedir="..\..">

  <import file="${basedir}${file.separator}conductor.xml"/>

	<target name="all"
        description="build all Java API Reference output"
        depends="javarefSample2xhtml"/>

    <!-- sample content targets -->
	<target name="javarefSample2xhtml"
        description="build HTML for the Java API Reference samples"
        depends="use-init">
      <mkdir dir="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out" />
      <mkdir dir="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out${file.separator}sample" />

      <antcall target="javaref2xhtml">
		<param name="dita.extname" value=".dita"/>
		<param name="transtype"    value="xhtml"/>
		<param name="args.input"
            value="${basedir}${file.separator}plugins${file.separator}javaapiref${file.separator}sample${file.separator}javaPackages1.ditamap"/>
		<param name="output.dir"
            value="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out${file.separator}sample"/>
      </antcall>

      <copy file="${basedir}${file.separator}plugins${file.separator}javaapiref${file.separator}sample${file.separator}frameset.html"
          todir="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out${file.separator}sample"/>
	</target>

	<target name="javaapirefSampleClean"
        description="Delete the sample output files from the build">
      <delete dir="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out${file.separator}sample" />
	</target>

    <!-- documentation targets -->
	<target name="javaapirefDoc2xhtml"
        description="build the HTML documentation for the specialization"
        depends="use-init">
      <mkdir dir="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out" />
      <antcall target="dita2xhtml">
		<param name="args.input"
            value="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}doc${file.separator}javaapiRefDoc.ditamap"/>
		<param name="output.dir"
            value="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out${file.separator}doc"/>
		<param name="dita.extname"
            value=".dita"/>
      </antcall>
	</target>

	<target name="javaapirefDocClean"
        description="Delete the documentation output files from the build">
      <delete dir="${basedir}${file.separator}demo${file.separator}javaapiref${file.separator}out${file.separator}doc" />
	</target>
</project>
