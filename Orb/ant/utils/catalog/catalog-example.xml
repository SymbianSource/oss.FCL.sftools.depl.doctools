    <description>
		An example of how to use a catalog - Validating an input dir of XML against the DITA catalog.
		Note you must fill in the property value for "inputdir"
	</description>

	<!-- Properties file contains a reference "catalog" to the DITA catalog project file -->
	<property file="catalog-example.properties"/>
	<import file="${catalog}"/>
	
	<!-- *** Define inputdir of XML to validate against DITA catalog here *** -->
	<property name="inputdir" value=""/>
	
	<target name="do_catalog_example">

		<xmlvalidate failonerror="no">
			<fileset dir="${inputdir}">
			  <include name="**/*.xml"/>
			  <include name="**/*.ditamap"/>
			</fileset>
			<!-- Refer to the catalog ${catalog} by it's ID attribute -->
			<xmlcatalog refid="${catalog-id}"/>
		</xmlvalidate>
	</target>
	
</project>